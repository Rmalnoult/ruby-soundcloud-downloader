<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<h2 class="text-center">Search for an artist on Soundcloud</h2>
				<br>
				<%= form_tag artists_path , method: 'GET' do %>
					<div class="form-group col-md-3 col-md-offset-4">
						<input type="text" name="artist_name" placeholder="Type the artist name" class="form-control">
					</div>
					<button type="submit" class="btn btn-default col-md-1">Search</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
